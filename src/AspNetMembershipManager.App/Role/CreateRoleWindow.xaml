<Window x:Class="AspNetMembershipManager.Role.CreateRoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create role" Height="157" Width="385" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid Margin="10,10,9,50">
            <Label Content="Role name:" Height="28" HorizontalAlignment="Left" Margin="6,15,0,0" Name="label1" VerticalAlignment="Top" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="112,17,0,0" Name="txtUserName" Text="{Binding Name}" VerticalAlignment="Top" Width="220" />
        </Grid>
        <Button Content="Ok" Height="23" HorizontalAlignment="Left" Margin="198,83,0,0" Name="btnOk" VerticalAlignment="Top" Width="75" Click="btnOk_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="279,83,0,0" Name="btnCancel" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" />
    </Grid>
</Window>
