<Window x:Class="AspNetMembershipManager.User.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		FocusManager.FocusedElement="{Binding ElementName=txtUserName}"
        Title="User Details" Height="300" Width="622">
    <Grid>
		<GroupBox Header="Details" Height="100" HorizontalAlignment="Left" Margin="12,12,0,0" Name="groupBox1" VerticalAlignment="Top" Width="393">
			<Grid>
				<Label Content="User name" Height="28" HorizontalAlignment="Left" Margin="6,6,0,0" Name="label1" VerticalAlignment="Top" />
				<TextBox Text="{Binding Username, Mode=OneWay}" IsReadOnly="True" Height="23" HorizontalAlignment="Left" Margin="99,8,0,0" Name="txtUserName" VerticalAlignment="Top" Width="276" />
				<Label Content="Email" Height="28" HorizontalAlignment="Left" Margin="6,40,0,0" Name="label2" VerticalAlignment="Top" />
				<TextBox Text="{Binding EmailAddress}" Height="23" HorizontalAlignment="Left" Margin="99,40,0,0" Name="textBox1" VerticalAlignment="Top" Width="276" />
			</Grid>
		</GroupBox>
    	<GroupBox Header="Profile" Height="131" HorizontalAlignment="Left" Margin="18,118,0,0" Name="groupBox2" VerticalAlignment="Top" Width="387">
    		<Grid>
				<DataGrid ItemsSource="{Binding Profile, Mode=OneWay}" Margin="6" />
			</Grid>
		</GroupBox>
    	<Button Content="Cancel" IsCancel="True" Height="23" HorizontalAlignment="Left" Margin="513,226,0,0" Name="button2" VerticalAlignment="Top" Width="75" />
    	<Button Content="Save" IsDefault="True" Height="23" HorizontalAlignment="Left" Margin="432,226,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="btnOk_Click" />
		<GroupBox Header="Roles" Height="189" HorizontalAlignment="Left" Margin="411,12,0,0" Name="groupBox3" VerticalAlignment="Top" Width="177">
			<Grid>
				<ListBox
					ItemsSource="{Binding Roles, Mode=OneWay}"
		            IsSynchronizedWithCurrentItem="True" FontSize="12" 
				    Height="Auto" VerticalAlignment="Stretch" SelectedIndex="0">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<CheckBox
								Name="CheckBoxZone"
								Content="{Binding RoleName}"
								Tag="{Binding RoleName}"
								IsChecked="{Binding IsMember}"
								Margin="0,5,0,0"/>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</Grid>
		</GroupBox>
	</Grid>
</Window>
