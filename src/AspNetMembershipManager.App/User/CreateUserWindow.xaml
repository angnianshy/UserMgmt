<Window x:Class="AspNetMembershipManager.User.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create user" Height="344" Width="396" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <GroupBox Header="User details" Height="176" HorizontalAlignment="Left" Margin="12,12,0,0" Name="groupBox1" VerticalAlignment="Top" Width="350">
            <Grid>
                <Label Content="Username:" Height="28" HorizontalAlignment="Left" Margin="6,15,0,0" Name="label1" VerticalAlignment="Top" />
                <TextBox Text="" Height="23" HorizontalAlignment="Left" Margin="112,17,0,0" Name="txtUserName" VerticalAlignment="Top" Width="220" />
                <Label Content="Password:" Height="28" HorizontalAlignment="Left" Margin="6,49,0,0" Name="label2" VerticalAlignment="Top" />
                <TextBox Text="{Binding Password}" Height="23" HorizontalAlignment="Left" Margin="112,51,0,0" Name="txtPassword" VerticalAlignment="Top" Width="220" />
            	<Label Content="Confirm password:" Height="28" HorizontalAlignment="Left" Margin="6,85,0,0" Name="label3" VerticalAlignment="Top" />
            	<TextBox Height="23" HorizontalAlignment="Left" Margin="112,87,0,0" Name="txtConfirmPassword" VerticalAlignment="Top" Width="220" />
            	<Label Content="Email address:" Height="28" HorizontalAlignment="Left" Margin="6,119,0,0" Name="label31" VerticalAlignment="Top" />
            	<TextBox Text="{Binding EmailAddress}" Height="23" HorizontalAlignment="Left" Margin="112,119,0,0" Name="txtEmailAddress" VerticalAlignment="Top" Width="220" />
            </Grid>
        </GroupBox>
        <Button Content="Ok" Height="23" HorizontalAlignment="Left" Margin="206,270,0,0" Name="btnOk" VerticalAlignment="Top" Width="75" Click="btnOk_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="287,270,0,0" Name="btnCancel" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" />
    </Grid>
</Window>
